<h1>Stories</h1>
<div class="row">
    {{#each stories}}
        <div class="col s12 m4">
            <div class="card">
                <div class="card-image">
                    {{!-- user pertains to the story user, because we are inside the user --}}
                    {{!-- ..user goes up a level outside of the loop --}}
                    {{{editIcon user ../user _id}}}
                </div>
                <div class="card-content center-align">
                    <h5>
                        {{title}}
                    </h5>
                    <p>
                        {{!-- (arguments), the 150 is the length, max 150 characters --}}
                        {{{stripTags (truncate body 150)}}}
                    </p>
                    <br>
                    <div class="chip">
                        <img src="{{user.image}}" alt="user image">
                        <a href="/stories/user/{{user._id}}">
                            {{user.displayName}}
                        </a>
                    </div>
                </div>
                <div class="card-action center-align">
                    <a href="/stories/{{_id}}" class="btn grey">
                        Read More
                    </a>
                </div>
            </div>
        </div>
    {{else}}
    <p>No stories to display</p>
    {{/each}}
</div>